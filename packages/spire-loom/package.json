{
  "name": "@o19/spire-loom",
  "version": "1.0.0",
  "description": "The loom that weaves spires from surfaces",
  "main": "index.js",
  "type": "module",
  "bin": {
    "spire-loom": "./bin/spire-loom.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "test": "node --test --import=tsx tests/*.test.ts",
    "test:xml": "node --test --import=tsx tests/xml-block-manager.test.ts",
    "test:gradle": "node --test --import=tsx tests/gradle-manager.test.ts"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "fast-xml-parser": "^5.3.7",
    "mrm-core": "^7.1.22",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/ejs": "^3.1.5",
    "@types/node": "^25.3.0"
  },
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts"
    },
    "./warp": {
      "types": "./warp/index.ts",
      "import": "./warp/index.ts"
    },
    "./machinery": {
      "types": "./machinery/shuttle/index.ts",
      "import": "./machinery/shuttle/index.ts"
    },
    "./machinery/shuttle": {
      "types": "./machinery/shuttle/index.ts",
      "import": "./machinery/shuttle/index.ts"
    },
    "./machinery/weaver": {
      "types": "./machinery/weaver.ts",
      "import": "./machinery/weaver.ts"
    }
  },
  "keywords": [
    "spire",
    "loom",
    "weave",
    "generate",
    "architecture"
  ],
  "author": "mnzaki & Kimi",
  "license": "ISC"
}
