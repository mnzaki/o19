{
  "name": "@o19/spire-loom",
  "version": "1.0.0",
  "description": "The loom that weaves spires from surfaces",
  "main": "index.js",
  "type": "module",
  "bin": {
    "spire-loom": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/ejs": "^3.1.5",
    "@types/node": "^25.3.0"
  },
  "exports": {
    ".": {
      "types": "./dist/warp/index.d.ts",
      "import": "./dist/warp/index.js"
    },
    "./warp": {
      "types": "./dist/warp/index.d.ts",
      "import": "./dist/warp/index.js"
    },
    "./machinery": {
      "types": "./dist/machinery/shuttle/index.d.ts",
      "import": "./dist/machinery/shuttle/index.js"
    },
    "./machinery/shuttle": {
      "types": "./dist/machinery/shuttle/index.d.ts",
      "import": "./dist/machinery/shuttle/index.js"
    },
    "./machinery/weaver": {
      "types": "./dist/machinery/weaver.d.ts",
      "import": "./dist/machinery/weaver.js"
    }
  },
  "keywords": [
    "spire",
    "loom",
    "weave",
    "generate",
    "architecture"
  ],
  "author": "mnzaki & Kimi",
  "license": "ISC"
}
