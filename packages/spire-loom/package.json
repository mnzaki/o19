{
  "name": "@o19/spire-loom",
  "version": "1.0.0",
  "description": "The loom that weaves spires from surfaces",
  "main": "index.js",
  "type": "module",
  "bin": {
    "spire-loom": "./bin/spire-loom.js",
    "spire-loom-warp": "./bin/spire-loom-warp.js",
    "spire-loom-mud-warp": "./bin/spire-loom-mud-warp.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "test": "node --test-force-exit --test --import=tsx tests/*.test.ts",
    "test:xml": "node --test --import=tsx tests/xml-block-manager.test.ts",
    "test:gradle": "node --test --import=tsx tests/gradle-manager.test.ts"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "fast-xml-parser": "^5.3.7",
    "fuse.js": "^7.1.0",
    "ink": "^5.2.0",
    "ink-select-input": "^6.1.0",
    "ink-text-input": "^6.0.0",
    "mrm-core": "^7.1.22",
    "pastel": "^3.0.0",
    "react": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/ejs": "^3.1.5",
    "@types/node": "^25.3.0",
    "@types/react": "^18.3.18"
  },
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts"
    },
    "./warp": {
      "types": "./warp/index.ts",
      "import": "./warp/index.ts"
    },
    "./machinery/treadle-kit": {
      "types": "./machinery/treadle-kit/index.ts",
      "import": "./machinery/treadle-kit/index.ts"
    },
    "./machinery/treadles": {
      "types": "./machinery/treadles/index.ts",
      "import": "./machinery/treadles/index.ts"
    },
    "./machinery/shuttle": {
      "types": "./machinery/shuttle/index.ts",
      "import": "./machinery/shuttle/index.ts"
    },
    "./machinery/weaver": {
      "types": "./machinery/weaver.ts",
      "import": "./machinery/weaver.ts"
    },
    "./machinery/reed": {
      "types": "./machinery/reed/workspace-discovery.ts",
      "import": "./machinery/reed/workspace-discovery.ts"
    },
    "./machinery/sley": {
      "types": "./machinery/sley/index.ts",
      "import": "./machinery/sley/index.ts"
    }
  },
  "keywords": [
    "spire",
    "loom",
    "weave",
    "generate",
    "architecture"
  ],
  "author": "mnzaki & Kimi",
  "license": "ISC"
}
